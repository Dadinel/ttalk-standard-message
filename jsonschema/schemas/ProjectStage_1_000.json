{
    "$schema": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/schemas/ProjectStage_1_000.json#",
    "info": {
        "description": "Contrato de Mensagem Padronizada para a situação dos projetos do gestão de ambientes",
        "version": "1.000",
        "title": "DiscoveryKey",
        "contact": {
            "name": "T-Talk",
            "url": "API.Totvs.com.br",
            "email": "comiteintegracao@totvs.com.br"
        },
        "x-totvs": {
            "transactionDefinition": {
                "subType": "event",
                "businessContentType": {
                    "type": "object",
                    "$ref": "#/definitions/projectstages"
                },
                "returnContentType": {
                    "type": "object",
                    "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/schemas/types/ListOfInternalId_1_000.json#/definitions/ReturnContentWithModelType"
                }
            },
            "messageDocumentation": {
                "name": "ProjectStage",
                "description": "Project Stage",
                "segment": "Foundation"
            },
            "productInformation": [
                {
                    "product": "Protheus",
                    "contact": "Protheus_FW@totvs.com.br",
                    "description": "Situação dos projetos",
                    "adapter": "MPApiPrjStage.prw",
                    "helpUrl": "link aqui"
                }
            ]
        }
    },
    "definitions": {
        "Pagedprojectstages": {
            "type": "object",
            "allOf": [
                {
                    "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/apis/types/totvsApiTypesBase.json#/definitions/Paging"
                },
                {
                    "type": "object",
                    "properties": {
                        "items": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/projectstages"
                            }
                        }
                    }
                }
            ]
        },
        "projectstages": {
            "type": "object",
            "properties": {
                "address": {
                    "description": "endereço do servidor",
                    "type": "string",
                    "example": "192.168.0.10",
                    "maxLength": 20
                },
                "port": {
                    "description": "porta do servidor",
                    "type": "string",
                    "example": "7000",
                    "maxLength": 10
                },
                "environment": {
                    "description": "nome do environment",
                    "type": "string",
                    "example": "envtop",
                    "maxLength": 200
                },
                "stage": {
                    "description": "nome do stage",
                    "type": "string",
                    "example": "production",
                    "maxLength": 30
                },
                "level": {
                    "description": "nível do stage",
                    "type": "string",
                    "example": "3",
                    "maxLength": 3
                }
            }
        }
    }
}